@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home"
       asp-action="Index"
       asp-route-teamName=""
       class="btn @(ViewBag.SelectedTeam == "" ? "btn-primary" :  "btn-outline-secondary")">Home</a>

    @foreach (string team in Model)
    {
        <a asp-controller="Home"
           asp-action="Index"
           asp-route-teamName="@team"
           class="btn @(ViewBag.SelectedTeam == team ? "btn-primary" :  "btn-outline-secondary")">@team</a>
    }
</div>
